# 多模态RAG系统环境变量配置

# ==================== OpenAI API 配置 ====================
# OpenAI API密钥 - 用于文本嵌入和LLM调用
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API基础URL - 可以使用代理或自定义端点
OPENAI_BASE_URL=https://api.openai.com/v1
# 或者使用代理服务（如代码中的默认值）：
# OPENAI_BASE_URL=https://ai.devtool.tech/proxy/v1

# 专门用于嵌入模型的配置（可选，如果不设置会使用上面的配置）
OPENAI_EMBEDDING_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_BASE_URL=https://api.openai.com/v1

# ==================== 阿里云DashScope API 配置 ====================
# 阿里云DashScope API密钥 - 用于通义千问聊天模型和文本嵌入模型
DASHSCOPE_API_KEY=sk-b81aa75697d04e2b88f967965307d909
# 阿里云嵌入模型的base_url
DASHSCOPE_EMBEDDING_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ==================== 应用配置 ====================
# 应用运行端口
PORT=8001

# 应用环境
ENVIRONMENT=development

# 数据存储目录
DATA_DIR=./data

# ==================== Hugging Face 镜像配置 ====================
# Hugging Face 镜像地址 - 使用国内镜像加速模型下载
HF_ENDPOINT=https://hf-mirror.com
HUGGINGFACE_HUB_CACHE=/tmp/huggingface_cache

# ==================== 其他可选配置 ====================
# 日志级别
LOG_LEVEL=INFO

# 是否启用调试模式
DEBUG=true

# CORS允许的源（生产环境请设置具体域名）
CORS_ORIGINS=*

# 文件上传大小限制（MB）
MAX_FILE_SIZE=100

# ==================== 说明 ====================
# 1. 请将 your_openai_api_key_here 替换为你的实际 OpenAI API 密钥
# 2. DASHSCOPE_API_KEY 已设置为阿里云通义千问的API密钥
# 3. 如果使用代理服务，请相应修改 BASE_URL
# 4. 生产环境请修改 CORS_ORIGINS 为具体的前端域名
# 5. 确保 DATA_DIR 目录存在且有读写权限